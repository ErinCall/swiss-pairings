!!!
%html
  %head
    %title= "Swiss Pairings - #{yield :page_title}"
    = csrf_meta_tag
    = stylesheet_link_tag 'compiled/screen', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie', :media => 'screen, projection'
    = javascript_include_tag 'http://use.typekit.com/yll6cqa.js'
    :javascript
      try{Typekit.load();}catch(e){}

  %body
    #wrap
      #header
        %h1 Swiss Pairings
      #content
        - flash.keys.each do |key|
          - unless flash[key].blank?
            %p{class: key}= flash[key]

        %h1= yield :page_title

        = yield

      #footer
        Source available on
        = link_to 'Github', 'https://github.com/drewchandler/swiss-pairings'
    = javascript_include_tag :defaults
    = yield :javascript
